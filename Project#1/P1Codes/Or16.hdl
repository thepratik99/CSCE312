/**
 * 16-bit bitwise Or:
 * for i = 0..15 out[i] = (a[i] or b[i])
 */

CHIP Or16 {
    IN a[16], b[16];
    OUT out[16];

    PARTS:
    Or8(a[0..7]=a[0..7], b[0..7]=b[0..7], out[0..7]=out[0..7]);
    Or8(a[0..7]=a[8..15], b[0..7]=b[8..15], out[0..7]=out[8..15]);
}